<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

    <style>
        .page-contain {
            display: flex;
            background: #E7F3F1;
            border: .75em solid white;
            padding: 2em;
            font-family: 'Open Sans', sans-serif;
        }

        .section-container {
            display: flex;
            flex-direction: column;
            max-width: 30.75em;
            /* min-height: 20.75em; */
            overflow: hidden;
            border-radius: .5em;
            text-decoration: none;
            background: white;
            padding: 2.5em 2.5em;
            transition: transform .45s ease, background .45s ease;
            box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px, rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;
            margin: 1.5em;
            text-align: left;
        }

        .section-img {
            height: 75px;
            width: 75px;
            float: left;
        }

        .section-title-img-container {
            display: flex;
            align-content: left;
            justify-content: center;
            align-items: left;
        }

        .section-title-img-container :last-child {
            align-self: flex-start;
        }

        .section-title-desc {
            display: flex;
            flex-direction: column;
            align-content: center;
            justify-content: center;
        }

        .section-date {
            align-self: flex-start;
            padding-top: 5px;
        }
        .cijfers{
            height: 0px;
            display: block;
            transition: all .5s;
        }
        .arrow {
            border: solid black;
            border-width: 0 3px 3px 0;
            display: inline-block;
            padding: 3px;
        }
        .displayBlock{
            height: 170px;
        }

        .right {
            transform: rotate(-45deg);
            -webkit-transform: rotate(-45deg);
        }
        button{
            background-color: #45a049;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover{
            background-color: #45a049;
        }

        h3 {
            padding-left: 15px;
            color: #242a2c;
            font-weight: 600;
            line-height: 1;
            transition: color .45s ease, border .45s ease;
        }

        p {
            padding-left: 15px;
        }
    </style>
    

    <body>
        <nav>
            <img id="logo" src="/public/Logo.png" alt="logo"><a href="#"></a>

            <ul>
                <li><a href="/">Home</li></a>
                <li><a href="/about">About</li></a>
                <li><a href="/contact">Contact</li></a>
                <li><a href="/history">History</li></a>
            </ul>
        </nav>
        <section>
            <h1>History</h1>
            
            
            <a style="float: right" href="/removehistory">Geschiedenis verwijderen</a><br><br>
        

        

        
        

        <% if(bedrijvenInDB.length==0){%>
            <div>There is no History in the database.</div>
            <% } %>

                <div class="page-container">
                    <% 
                        let index = 0;
                        bedrijvenInDB.forEach(e=> {
                            index++;
                        %>

                        <section class="section-container">
                            <div class="section-title-img-container">
                                <img class="section-img"
                                src="https://img.freepik.com/free-vector/home-icon-house-symbol-simple-vector-design-logo_231786-5048.jpg?w=2000"
                                    alt="">

                                <div class="section-title-desc">
                                    <h3>
                                        <%= e.name %>
                                    </h3>

                                    <br />
                                    <p>
                                        <%= e.address %> &nbsp;&nbsp;<br><button style="float: left;" id="btn<%= index %>" onclick="seeNumbers()" >Meer</button>
                                            <br />
                                    </p>
                                </div>
                                <div class="section-date">
                                    <p>
                                        <%= e.datumNeerlegging %> 
                                    </p>
                                </div>

                            </div>
                            <div class="cijfers"><br><br>
                                <p><strong>Eigen Vermogen: </strong><script>returnValutaString(2905049.4334)</script><%= e.eigenVermogen %></p><br>
                                <p><strong>Schulden: </strong><%= e.schulden %></p><br>
                                <p><strong>Bedrijfswinst: </strong><%= e.bedrijfsWinst %></p><br>
                                <p><strong>Datum neerlegging: </strong><%= e.datumNeerlegging %></p>
                            </div>

                        </section>
                        <% }); %>
                </div>
            </section>

                <%- include('./partials/footer.ejs') %>
                <script>
                    
                   

                    function returnValutaString(n){
                        let result = " â‚¬ " + n.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2});
                        return(result)
                    }

                    console.log(returnValutaString(2905049.4334));
                    


                    
                    
                    
                    function seeNumbers(){

                    let allCijfers = document.getElementsByClassName("cijfers");

                    let idOfBtn = event.target.id;
                    let lastCharOfId = idOfBtn.charAt(idOfBtn.length-1);
                    
                    allCijfers[lastCharOfId-1].classList.toggle("displayBlock");

                    }
                </script>
    </body>

</html>